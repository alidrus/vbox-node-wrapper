{
    "parser": "babel-eslint",
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": ["error", { "allow": ["group", "groupEnd", "log", "warn", "error"]  }],
        "indent": ["error", 4],
        "no-param-reassign": ["error", { "props": false  }],
        "prefer-template": "off",
        "func-names": ["error", "as-needed"],
        "import/prefer-default-export": "off"
    }
}
